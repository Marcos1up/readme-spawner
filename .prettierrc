{
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "singleAttributePerLine": false,
    "overrides": [
      {
        "files": ["*.json", "*.jsonc"],
        "options": {
          "printWidth": 80
        }
      },
      {
        "files": ["*.md", "*.mdx"],
        "options": {
          "printWidth": 80,
          "proseWrap": "always"
        }
      },
      {
        "files": ["*.css", "*.scss"],
        "options": {
          "printWidth": 120
        }
      }
    ]
  }